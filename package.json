{
  "name": "gerenciador-font",
  "version": "1.0.0",
  "description": "Gerenciador de fontes para macOS e Windows com integração ao Figma e outros aplicativos de design",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "verificar": "node verificar_compatibilidade.js"
  },
